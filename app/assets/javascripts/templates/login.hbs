<div class="devise-new-container">
  <form {{action login content on="submit"}} class="form-horizontal">
    <h2>Sign In</h2>
    {{#if errorMsg}}
      <div class="alert alert-error">
        {{errorMsg}}
      </div>
    {{/if}}

    <div class="control-group">
      <label class="control-label" for="email">Email</label>
      <div class="controls">
        {{view Em.TextField valueBinding="email" id="email"}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="password" type="password" id="password"}}
      </div>
    </div>

    {{#link-to 'forgotPassword'}}Forgot your password?{{/link-to}}
    <div class="form-actions">
      <button  type="submit" class="btn btn-primary" value="Login">Login</button>
      <input {{action cancel}} type="submit" class="btn" value="Cancel" />
    </div>
  </form>
</div>
