<!DOCTYPE html>
<html>
  <head>
    <title>SuchCoinWow</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
  </head>
  <body>
    <div id='wrapper'>
      <%- if user_signed_in? %>
        <%= render 'sidebar' %>
      <% end %>

      <div id='page-wrapper'>
        <div class='row content-container'>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
    <script type='text/javascript'>
      App.ready = function() {
        App.initApp(jQuery.parseJSON('#{current_user_json}'));
      }
    <script>
    <%= yield :foot %>
  </body>
</html>
